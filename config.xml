<?xml version='1.0' encoding='utf-8'?>
<widget id="com.LogicSquare.Price" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Price</name>
    <description>
            A Simple shopping app.
        </description>
    <author email="vineet@logic-square.com" href="http://cordova.io">
            Vineet
        </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="AndroidLaunchMode" value="singleTop" />
        <preference name="android-minSdkVersion" value="15" />
        <preference name="android-build-tool" value="gradle" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="phonegap-facebook-plugin" spec="~0.12.0">
        <param name="APP_ID" value="1047876051936088" />
        <param name="APP_NAME" value="Price-Dev" />
    </plugin>
	<preference name="exit-on-suspend" value="false" />
</widget>
